<Window x:Class="Diplom.Windows.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Windows"
        mc:Ignorable="d"
        Title="Главная" MinHeight="450" MinWidth="800" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    
    <Grid Background="#FFC8C8C8">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="180*"/>
        </Grid.RowDefinitions>

        <Menu Height="25" VerticalAlignment="Top">

            <MenuItem Header="Выход" Click="Exit_Click"></MenuItem>
            <MenuItem x:Name="menuG" Header="Группы" Click="Grup_Click"></MenuItem>
            <MenuItem x:Name="menuA" Header="Абитуренты" Click="ABT_Click"></MenuItem>
            <MenuItem x:Name="menuL" Header="Cписки" Click="Lists_Click"></MenuItem>
            <MenuItem x:Name="menuU" Header="Пользователи" Click="User_Click"></MenuItem>
        </Menu>
        
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" x:Name="Frame"/>
        
    </Grid>
</Window>
